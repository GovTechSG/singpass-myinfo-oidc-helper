{
	"extends": "./shared-config/tsconfig.json",
	"compilerOptions": {
		"baseUrl": "./src",
		"outDir": "./dist",
		"declaration": true,
		"declarationMap": true,
		"declarationDir": "./dist",
		"paths": {
			"src/*": ["./*"]
		}
	},
	"include": ["src/**/*"],
	"exclude": ["**/node_modules/*", "**/__tests__/*", "**/__mocks__/*"]
}
